<% include partials/header %>
<div class="container-fluid">

  <h1 class="text-center">Create Campground</h1>

  <div class="row">

    <div style="width: 33%; margin: 30px auto;">

      <form class="" action="/campgrounds" method="post">
        <div class="form-group">
          <input class="form-control" type="text" placeholder="name" name="name">
        </div>
        <div class="form-group">
          <input class="form-control" type="text" placeholder="image url" name="image">
        </div>
        <div class="form-group">
          <input class="form-control" type="text" placeholder="description" name="description">
        </div>
        <div class="form-group">
          <input class="btn btn-light btn-lg btn-block" type="submit" value="Submit">
        </div>
      </form>

    </div>

  </div>

  <div class="row" style="width: 33%; margin: 20px auto;">
    <a href="/campgrounds">Go back</a>
  </div>

</div>

